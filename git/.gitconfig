# .gitconfig ###################################################
[user]
	name = struuuuggle
	email = struuuuggle@gmail.com
[core]
	excludesfile = ~/dotfiles/git/.gitignore_global
	editor = emacsclient -nw
[color]
  ui = true
[commit]
	template = ~/dotfiles/git/.commit_template
[pager]
	branch = false
[init]
	defaultBranch = main
[pull]
	ff = only
[alias]
	undo = reset --hard HEAD@{1}
	# ログをグラフ表示
	graph = log --graph --decorate --name-status
	# PR作成時のstatを表示
	stat = "!git diff --numstat origin/develop HEAD | cut -f -2 | awk '{ col1 += $1; col2 += $2 } END { print col1 + col2 }'"
[diff]
	renameLimit = 636
